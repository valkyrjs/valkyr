{
  "workspace": [
    "./api",
    "./auth",
    "./event-emitter",
    "./event-store",
    "./inverse",
    "./json-rpc",
    "./process",
    "./router",
    "./testcontainers"
  ],
  "exclude": [
    ".vscode"
  ],
  "nodeModulesDir": "auto",
  "lint": {
    "rules": {
      "exclude": [
        "ban-types",
        "no-explicit-any",
        "require-await"
      ]
    }
  },
  "fmt": {
    "lineWidth": 165
  },
  "publish": {
    "exclude": [
      ".eslint",
      ".github",
      ".vscode",
      ".gitignore",
      "tests"
    ]
  },
  "tasks": {
    "dependencies": {
      "command": "npx npm-check-updates -p npm -u",
      "description": "Check and apply package dependency updates"
    },
    "lint": "npx eslint -c eslint.config.mjs .",
    "test": "deno run -A .tasks/test.ts && deno test -A --unstable-ffi",
    "test:publish": "deno publish --dry-run",
    "generate": "deno run -A .tasks/generate.ts",
    "ncu": "npx ncu -u -p npm"
  }
}
